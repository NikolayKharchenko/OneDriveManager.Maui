<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:OneDriveAlbums.UI" xmlns:str="clr-namespace:OneDriveAlbums.UI.Resources.Strings"
        x:Class="OneDriveAlbums.UI.MainPage">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        <HorizontalStackLayout Grid.Row="0" HorizontalOptions="End" VerticalOptions="Center" Spacing="30" Margin="0,0,0,30">
            <local:SymbolFontButton Ligature="cloud_off" Clicked="Reconnect_Click" FontSize="28"/>
            <local:SymbolFontButton Ligature="settings" Clicked="Settings_Click" FontSize="28"/>
        </HorizontalStackLayout>
        <local:AlbumsView x:FieldModifier="public" Grid.Row="1" x:Name="Albums_Vw" />
        <local:SettingsView Grid.Row="1" x:Name="Settings_Vw" IsVisible="False" />
        <Label Grid.Row="2" x:Name="Status_Lbl" FontSize="14" HorizontalOptions="Start" Margin="0,20,0,0" />
    </Grid>
</ContentPage>
