<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:OneDriveAlbums.UI" xmlns:str="clr-namespace:OneDriveAlbums.UI.Resources.Strings"
        x:Class="OneDriveAlbums.UI.MainPage">

    <Grid RowDefinitions="*,Auto" Padding="10">
        <local:AlbumsView Grid.Row="0" x:Name="Albums_Vw" />
        <local:SettingsView Grid.Row="0" x:Name="Settings_Vw" IsVisible="False" />
        <Label Grid.Row="0" x:Name="Settings_Btn" Text="settings" FontFamily="MaterialSymbolsRounded" FontSize="28" BackgroundColor="Transparent"
                HorizontalOptions="End" VerticalOptions="Start">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="Settings_Click" />
            </Label.GestureRecognizers>
        </Label>
        <Label Grid.Row="1" x:Name="Status_Lbl" FontSize="14" HorizontalOptions="Start" Margin="0,20,0,0" />
    </Grid>
</ContentPage>
