<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="OneDriveAlbums.UI.AlbumsView" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:str="clr-namespace:OneDriveAlbums.UI.Resources.Strings" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="5">

        <HorizontalStackLayout Grid.Row="0">
            <Label Text="{Static str:Strings.SortBy_Lbl}" WidthRequest="100" Margin="0,0,10,0" VerticalOptions="Center" />

            <HorizontalStackLayout Spacing="4" VerticalOptions="Center" Margin="0,0,30,0" WidthRequest="80">
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SortByName_Click" />
                </HorizontalStackLayout.GestureRecognizers>
                <Label Text="{x:Static str:Strings.SortByName_Btn}" x:Name="SortByName_Btn" VerticalOptions="Center" />
                <Label x:Name="SortByName_Icon" Text="" FontFamily="MaterialSymbolsRounded" FontSize="28" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="4" VerticalOptions="Center" Margin="0,0,30,0" WidthRequest="80">
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SortByDate_Click" />
                </HorizontalStackLayout.GestureRecognizers>
                <Label Text="{x:Static str:Strings.SortByDate_Btn}" x:Name="SortByDate_Btn" VerticalOptions="Center" />
                <Label x:Name="SortByDate_Icon" Text="" FontFamily="MaterialSymbolsRounded" FontSize="28" VerticalOptions="Center" />
            </HorizontalStackLayout>
        </HorizontalStackLayout>

        <HorizontalStackLayout Grid.Row="1">
            <Label Text="{Static str:Strings.SearchFor_Lbl}" WidthRequest="100" Margin="0,0,10,0" VerticalOptions="Center" />
            <Grid>
                <Entry x:Name="SearchFor_Entry" WidthRequest="310" VerticalOptions="Center" TextChanged="SearchFor_TextChanged"
                        Placeholder="{x:Static str:Strings.SearchFor_PlaceHolder}" />
                <Label Text="close" x:Name="ClearSearch_Btn" VerticalOptions="Center" HorizontalOptions="End" FontFamily="MaterialSymbolsRounded"
                        FontSize="28" TextColor="Gray">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ClearSearch_Click" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>
        </HorizontalStackLayout>

        <CollectionView Grid.Row="2" SelectionMode="Single" x:Name="Albums_CVw" SizeChanged="Albums_SizeChanged">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="5" HorizontalItemSpacing="2" VerticalItemSpacing="2" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8" Margin="6">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Album_Tap" NumberOfTapsRequired="2" />
                        </Border.GestureRecognizers>

                        <Grid>
                            <Image WidthRequest="300" HeightRequest="300" Source="{Binding Thumbnail}" Aspect="AspectFit"
                                    BindingContextChanged="ThumbnailImage_BindingContextChanged" />

                            <Label Text="{Binding Name}" LineBreakMode="TailTruncation" HorizontalOptions="Center" VerticalOptions="Start"
                                    Background="White" Padding="3" Margin="3" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
